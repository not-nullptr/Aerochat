                                    </Style>
                                </Grid.Style>
                                <controls:AnimatedTileImage Margin="0,16" HorizontalAlignment="Center" VerticalAlignment="Bottom" Image="/Resources/Speen.png" FrameDuration="50" FrameWidth="48" FrameHeight="36" />
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Messages.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Loading}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <TextBlock Margin="-16,8,0,0" Text="Start the conversation!" HorizontalAlignment="Stretch" VerticalAlignment="Top" TextAlignment="Center" FontStyle="Italic" Opacity="0.3" />
                            </Grid>

                            <Grid Grid.Row="3" Margin="0,0,18,0">
                                <StackPanel Margin="0,4,0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <controls:AnimatedTileImage Grid.Column="0" Image="/Resources/Message/Typing.png" FrameWidth="22" FrameHeight="16" FrameDuration="500">
                                            <controls:AnimatedTileImage.Style>
                                                <Style TargetType="controls:AnimatedTileImage">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.TypingString, ElementName=Window}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
          
                                                    </Style.Triggers>
                                                </Style>
                                            </controls:AnimatedTileImage.Style>
                                        </controls:AnimatedTileImage>
                                        <TextBlock Grid.Column="1" Foreground="#888888" TextTrimming="CharacterEllipsis">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding TypingString, Mode=OneWay}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TypingString, Mode=OneWay}" Value="">
                                                            <Setter Property="Text">
                                                                <Setter.Value>
                                                                    <MultiBinding StringFormat="{}Last message received at {0:HH:mm} on {1:dd/MM/yyyy}.">
                                                                        <Binding Path="LastReceivedMessage.Timestamp" />
                                                                        <Binding Path="LastReceivedMessage.Timestamp" />
                                                                    </MultiBinding>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                    <controls:ColorizedNineSlice TintColor="{Binding Recipient.Scene.Color}" Cursor="SizeNS" PreviewMouseDown="BottomSeperator_PreviewMouseDown" x:Name="BottomSeperator" Height="8" Slice="64,2" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Image="/Resources/Message/BottomSeperator.png" />
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="4" Margin="0,0,18,0" IsHitTestVisible="{Binding Channel.CanTalk}">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Opacity" Value="1" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Channel.CanTalk}" Value="False">
                                                <Setter Property="Opacity" Value="0.4" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsDM}" Value="True">
                                                <Setter Property="Opacity" Value="1" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Grid VerticalAlignment="Stretch" Panel.ZIndex="5" Margin="-1,0,0,0">
                                    <TextBox IsEnabled="{Binding Channel.CanTalk}" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" PreviewKeyDown="Message_PreviewKeyDown" Padding="3,4" Background="Transparent" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="10" x:Name="MessageTextBox">
                                        <TextBox.Style>
                                            <Style BasedOn="{x:Null}" TargetType="{x:Type TextBox}">
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="AllowDrop" Value="true"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                                            <Border x:Name="bg" BorderBrush="#bdd5df" BorderThickness="0">
                                                                <ScrollViewer Background="Transparent" x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <controls:ColorizedNineSlice HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Image="/Resources/Message/InputBackground.png" Slice="16,16" TintColor="{Binding Recipient.Scene.Color}">
                                        <controls:ColorizedNineSlice.Style>
                                            <Style TargetType="controls:ColorizedNineSlice">
                                                <Setter Property="Darken" Value="0.25" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Channel.CanTalk}" Value="False">
                                                        <Setter Property="Darken" Value="1" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsDM}" Value="true">
                                                        <Setter Property="Darken" Value="0.25" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </controls:ColorizedNineSlice.Style>
                                    </controls:ColorizedNineSlice>
                                    <TextBlock Text="You do not have permission to talk in this chat." FontStyle="Italic" Margin="6,4" TextTrimming="CharacterEllipsis">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Channel.CanTalk}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsDM}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <controls:ColorizedNineSlice Image="/Resources/Message/SpeechBubbleArrow.png" Slice="4,4" Panel.ZIndex="12" UseLayoutRounding="False" Width="12" Height="13" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-12,0,0,0" TintColor="{Binding Recipient.Scene.Color}">
                                    <controls:ColorizedNineSlice.Style>
                                        <Style TargetType="controls:ColorizedNineSlice">
                                            <Setter Property="Darken" Value="0.25" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Channel.CanTalk}" Value="False">
                                                    <Setter Property="Darken" Value="1" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsDM}" Value="true">
                                                    <Setter Property="Darken" Value="0.25" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </controls:ColorizedNineSlice.Style>
                                </controls:ColorizedNineSlice>
                                <Grid Grid.Row="1" Panel.ZIndex="11">
                                    <controls:ColorizedNineSlice Image="/Resources/Message/BottomToolbar.png" TintColor="{Binding Recipient.Scene.Color}" Margin="-1,-1,0,-1">
                                        <controls:ColorizedNineSlice.Style>
                                            <Style TargetType="controls:ColorizedNineSlice">
                                                <Setter Property="Darken" Value="0.25" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Channel.CanTalk}" Value="False">
                                                        <Setter Property="Darken" Value="1" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsDM}" Value="true">
                                                        <Setter Property="Darken" Value="0.25" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </controls:ColorizedNineSlice.Style>
                                    </controls:ColorizedNineSlice>
                                    <StackPanel Orientation="Horizontal">
                                        <Grid Height="30" MouseUp="RunNudge">
                                            <controls:NineSliceButton Hover="/Resources/Message/ToolbarHover.png" Pressed="/Resources/Message/ToolbarActive.png" Slice="6,6" />
                                            <Image Margin="4,0" Source="/Resources/Message/Nudge.png" HorizontalAlignment="Center" VerticalAlignment="Stretch" IsHitTestVisible="False" Width="24" Height="16" />
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="14,8">
                    <Hyperlink>
                        <Hyperlink.Style>
                            <Style TargetType="Hyperlink" BasedOn="{StaticResource {x:Type Hyperlink}}">
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="TextDecorations" Value="None" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#0066cc" />
                                        <Setter Property="TextDecorations" Value="Underline" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Hyperlink.Style>
                        <TextBlock HorizontalAlignment="Stretch" Text="Aerochat Beta by nullptr" />
                    </Hyperlink>
                </TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </controls:BaseTitlebar>
</Window>
