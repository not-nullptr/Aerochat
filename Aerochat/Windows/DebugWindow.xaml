<Window x:Class="Aerochat.Windows.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aerochat.Windows"
        xmlns:controls="clr-namespace:Aerochat.Controls" xmlns:viewmodels="clr-namespace:Aerochat.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DebugWindowViewModel}"
        xmlns:attachmentseditor="clr-namespace:Aerochat.Controls.AttachmentsEditor"
        mc:Ignorable="d"
        Style="{StaticResource Window}"
        Title="DebugWindow" Height="450" Width="800">
    <controls:BaseTitlebar Color="#f1f6fb" BlackText="Black">
        <Grid UseLayoutRounding="True">
            <ScrollViewer>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                    <attachmentseditor:AttachmentsStrip x:Name="PART_AttachmentsEditor" Height="100" Width="300" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Change orientation" Click="Button_Click" Margin="0,0,1,0"></Button>
                        <Button Grid.Column="1" Content="Select file" Click="Button_Click_1"  Margin="1,0,0,0"></Button>
                    </Grid>
                    <controls:ProfilePictureFrame ProfilePicture="/Aerochat;component/Resources/Frames/PlaceholderPfp.png" UserStatus="{Binding UserStatus}" FrameSize="ExtraSmall" />
                    <controls:ProfilePictureFrame ProfilePicture="/Aerochat;component/Resources/Frames/PlaceholderPfp.png" UserStatus="{Binding UserStatus}" FrameSize="Small" />
                    <controls:ProfilePictureFrame ProfilePicture="/Aerochat;component/Resources/Frames/PlaceholderPfp.png" UserStatus="{Binding UserStatus}" FrameSize="Medium" />
                    <controls:ProfilePictureFrame ProfilePicture="/Aerochat;component/Resources/Frames/PlaceholderPfp.png" UserStatus="{Binding UserStatus}" FrameSize="Large" />
                    <controls:ProfilePictureFrame ProfilePicture="/Aerochat;component/Resources/Frames/PlaceholderPfp.png" UserStatus="{Binding UserStatus}" FrameSize="ExtraLarge" />
                    <ComboBox x:Name="StatusesComboBox" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </controls:BaseTitlebar>
</Window>
